# Supabase (required for auth and cloud sync)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase service role key — server-side only, never expose to the client
# Used by the /api/daily-recipe cron endpoint to write to the daily_recipe table
# Find it in: Supabase Dashboard → Project Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe (optional - only needed if enabling premium features)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_PRICE_MONTHLY=price_monthly
VITE_STRIPE_PRICE_YEARLY=price_yearly
